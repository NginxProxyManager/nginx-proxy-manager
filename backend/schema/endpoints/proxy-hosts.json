      "$ref": "../definitions.json#/definitions/block_exploits"
    },
    "caching_enabled": {
      "$ref": "../definitions.json#/definitions/caching_enabled"
    },
    "allow_websocket_upgrade": {
      "description": "Allow Websocket Upgrade for all paths",
      "example": true,
      "type": "boolean"
    },
    "access_list_id": {
      "$ref": "../definitions.json#/definitions/access_list_id"
    },
    "advanced_config": {
      "type": "string"
    },
    "enabled": {
      "$ref": "../definitions.json#/definitions/enabled"
    },
    "meta": {
      "type": "object"
    },
    "locations": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": [
          "forward_scheme",
          "forward_host",
          "forward_port",
          "path"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": ["integer", "null"]
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "forward_scheme": {
            "$ref": "#/definitions/forward_scheme"
          },
          "forward_host": {
            "$ref": "#/definitions/forward_host"
          },
          "forward_port": {
            "$ref": "#/definitions/forward_port"
          },
          "forward_path": {
            "type": "string"
          },
          "advanced_config": {
            "type": "string"
          }
        }
      }
    },
    "remark": {
      "type": "string",
      "description": "Remark",
      "maxLength": 100
