    },
    "domain_names": {
      "$ref": "../definitions.json#/definitions/domain_names"
    },
    "forward_scheme": {
      "type": "string",
      "enum": ["http", "https"]
    },
    "forward_host": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "forward_port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "certificate_id": {
      "$ref": "../definitions.json#/definitions/certificate_id"
    },
    "ssl_forced": {
      "$ref": "../definitions.json#/definitions/ssl_forced"
    },
    "hsts_enabled": {
      "$ref": "../definitions.json#/definitions/hsts_enabled"
