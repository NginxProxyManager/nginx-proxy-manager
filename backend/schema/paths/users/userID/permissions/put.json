{
	"operationId": "updateUserPermissions",
	"summary": "Update a User's Permissions",
	"tags": ["users"],
	"security": [
		{
			"bearerAuth": ["admin"]
		}
	],
	"parameters": [
		{
			"in": "path",
			"name": "userID",
			"schema": {
				"type": "integer",
				"minimum": 1
			},
			"required": true,
			"description": "User ID",
			"example": 2
		}
	],
	"requestBody": {
		"description": "Permissions Payload",
		"required": true,
		"content": {
			"application/json": {
				"schema": {
					"$ref": "../../../../components/permission-object.json"
				},
				"example": {
					"visibility": "all",
					"access_lists": "view",
					"certificates": "hidden",
					"dead_hosts": "hidden",
					"proxy_hosts": "manage",
					"redirection_hosts": "hidden",
					"streams": "hidden"
				}
			}
		}
	},
	"responses": {
		"200": {
			"description": "200 response",
			"content": {
				"application/json": {
					"examples": {
						"default": {
							"value": true
						}
					},
					"schema": {
						"type": "boolean"
					}
				}
			}
		}
	}
}
