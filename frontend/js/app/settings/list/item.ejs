<td>
    <div>
        <% if (id === 'default-site') { %>
            <%- i18n('settings', 'default-site') %>
        <% } else if (id === 'language') { %>
            <%- i18n('settings', 'language') %>
        <% } %>
    </div>
    <div class="small text-muted">
        <% if (id === 'default-site') { %>
            <%- i18n('settings', 'default-site-description') %>
        <% } else if (id === 'language') { %>
            <%- i18n('settings', 'language-description') %>
        <% } %>
    </div>
</td>
<td>
    <div>
        <% if (id === 'default-site') { %>
            <%- i18n('settings', 'default-site-' + value) %>
        <% } else if (id === 'language') { %>
            <%- i18n('settings', 'current-language') %>: <%- locale === 'zh' ? '中文 (简体)' : locale === 'tw' ? '中文 (繁體)' : locale === 'en' ? 'English' : locale === 'fr' ? 'Français' : locale === 'jp' ? '日本語' : locale === 'kr' ? '한국어' : locale === 'ru' ? 'Русский' : locale === 'pt' ? 'Português' : 'English' %>
        <% } %>
    </div>
</td>
<td class="text-right">
    <% if (id === 'language') { %>
        <div class="item-action">
            <select class="form-control language-selector" style="width: 150px;">
                <option value="zh" <%- locale === 'zh' ? 'selected' : '' %>>中文 (简体)</option>
                <option value="tw" <%- locale === 'tw' ? 'selected' : '' %>>中文 (繁體)</option>
                <option value="en" <%- locale === 'en' ? 'selected' : '' %>>English</option>
                <option value="fr" <%- locale === 'fr' ? 'selected' : '' %>>Français</option>
                <option value="jp" <%- locale === 'jp' ? 'selected' : '' %>>日本語</option>
                <option value="kr" <%- locale === 'kr' ? 'selected' : '' %>>한국어</option>
                <option value="ru" <%- locale === 'ru' ? 'selected' : '' %>>Русский</option>
                <option value="pt" <%- locale === 'pt' ? 'selected' : '' %>>Português</option>
            </select>
        </div>
    <% } else { %>
        <div class="item-action dropdown">
            <a href="#" data-toggle="dropdown" class="icon"><i class="fe fe-more-vertical"></i></a>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="#" class="edit dropdown-item"><i class="dropdown-icon fe fe-edit"></i> <%- i18n('str', 'edit') %></a>
            </div>
        </div>
    <% } %>
</td>