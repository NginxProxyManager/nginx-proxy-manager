{
	"operationId": "disableStream",
	"summary": "Disable a Stream",
	"tags": ["Streams"],
	"security": [
		{
			"BearerAuth": ["streams"]
		}
	],
	"parameters": [
		{
			"in": "path",
			"name": "streamID",
			"schema": {
				"type": "integer",
				"minimum": 1
			},
			"required": true,
			"example": 2
		}
	],
	"responses": {
		"200": {
			"description": "200 response",
			"content": {
				"application/json": {
					"examples": {
						"default": {
							"value": true
						}
					},
					"schema": {
						"type": "boolean"
					}
				}
			}
		},
		"400": {
			"description": "400 response",
			"content": {
				"application/json": {
					"examples": {
						"default": {
							"value": {
								"error": {
									"code": 400,
									"message": "Host is already disabled"
								}
							}
						}
					},
					"schema": {
						"$ref": "../../../../../components/error.json"
					}
				}
			}
		}
	}
}
