						},
						"domain_names": {
							"$ref": "../../../components/dead-host-object.json#/properties/domain_names"
						}
					}
				},
				"example": {
					"incoming_port": 8888,
					"forwarding_host": "127.0.0.1",
					"forwarding_port": 8080,
					"tcp_forwarding": true,
					"udp_forwarding": false,
					"certificate_id": 0,
