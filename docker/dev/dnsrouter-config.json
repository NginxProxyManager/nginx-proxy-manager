{
    "log": {
        "format": "nice",
        "level": "debug"
    },
    "servers": [
        {
            "host": "0.0.0.0",
            "port": 53,
            "upstreams": [
                {
                    "regex": "website[0-9]+.example\\.com",
                    "upstream": "127.0.0.11"
                },
                {
                    "regex": ".*\\.example\\.com",
                    "upstream": "1.1.1.1"
                },
                {
                    "regex": "local",
                    "nxdomain": true
                }
            ],
            "internal": null,
            "default_upstream": "127.0.0.11"
        }
    ]
}
